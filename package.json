{
    "name": "xerius",
    "version": "0.0.1",
    "description": "An open source low-code platform based on ElectronJS, Framework7, Node-Red and uibuilder.",
    "main": "main.js",
    "scripts": {
        "start": "electron main.js",
        "test": "echo \" Warning: no test specified \"",
        "watch": "nodemon --exec \"npm run start\" --ext js,css,json --ignore build/",
        "clean": "rm -rf ./build ../electron-bin && mkdir -p ./build ../electron-bin",
        "pack": "npm run clean && electron-packager . Xerius --icon=nodered.icns --all --out=build --overwrite",
        "pack:osx": "electron-packager . Xerius --icon=nodered.icns --platform=darwin --arch=x64 --out=build --overwrite",
        "pack:linux32": "electron-packager . Xerius --icon=nodered.icns --platform=linux --arch=ia32 --out=build --overwrite && cp afterinst.sh build/Xerius-linux-ia32/",
        "pack:linux64": "electron-packager . Xerius --icon=nodered.icns --platform=linux --arch=x64 --out=build --overwrite && cp afterinst.sh build/Xerius-linux-x64",
        "pack:win32": "electron-packager . Xerius --icon=nodered.icns --platform=win32 --arch=ia32 --out=build --asar --overwrite --win32metadata.CompanyName='CV Infinity Karya Bersama' --win32metadata.ProductName='Xerius'",
        "pack:win64": "electron-packager . Xerius --icon=nodered.icns --platform=win32 --arch=x64  --out=build --asar --overwrite --win32metadata.CompanyName='CV Infinity Karya Bersama' --win32metadata.ProductName='Xerius'",
        "pack:armv7l": "electron-packager . Xerius --icon=nodered.icns --platform=linux --arch=armv7l --out=build --overwrite && cp afterinst.sh build/Xerius-linux-armv7l",
        "build": "npm run clean && npm run build:osx && npm run build:linux64 && npm run build:linux32",
        "build:osx": "npm run pack:osx && appdmg appdmg.json ../electron-bin/Xerius-Electron_$npm_package_version.dmg",
        "build:linux32": "npm run pack:linux32 && fpm -s dir -t deb -f -n node-red-electron -v $npm_package_version -m info@etter.cloud -a i386   -p ../electron-bin -C build/Xerius-linux-ia32 --prefix=/opt/node-red --after-install=afterinst.sh ./",
        "build:linux64": "npm run pack:linux64 && fpm -s dir -t deb -f -n node-red-electron -v $npm_package_version -m info@etter.cloud -a x86_64 -p ../electron-bin -C build/Xerius-linux-x64  --prefix=/opt/node-red --after-install=afterinst.sh ./",
        "build:win32": "npm run pack:win32 && node makewin32.js",
        "build:win64": "npm run pack:win64 && node makewin64.js",
        "build:armv7l": "npm run pack:armv7l && fpm -s dir -t deb -f -n node-red-electron -v $npm_package_version -m info@etter.cloud -a armv7l -p ../electron-bin -C build/Xerius-linux-armv7l --prefix=/opt/node-red --after-install=afterinst.sh ./"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/imboost/xerius.git"
    },
    "dependencies": {
        "express": "^4.14.0",
        "node-red": "^2.2.2",
        "node-red-contrib-fs-ops-coco": "^1.6.2",
        "node-red-contrib-uibuilder": "~5.0.2"
    },
    "keywords": [
        "low-code",
        "framework7",
        "node-red",
        "uibuilder",
        "electronjs"
    ],
    "contributors": [
        {
            "name": "Aksan Maulana"
        },
        {
            "name": "Dave Conway-Jones"
        },
        {
            "name": "Nathanaël Lécaudé"
        },
        {
            "name": "Taufik Sulaeman P"
        }
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/imboost/xerius/issues"
    },
    "homepage": "https://github.com/imboost/xerius#readme",
    "devDependencies": {
        "electron": "^18.2.3",
        "electron-rebuild": "^3.2.7",
        "electron-squirrel-startup": "^1.0.0",
        "electron-winstaller": "^2.5.2"
    }
}
